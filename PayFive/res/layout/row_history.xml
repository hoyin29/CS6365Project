<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#EEE"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:src="@drawable/recv" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_thumbnail"
        android:text="Received"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lbl_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:minWidth="80dp"
        android:text="Amount"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/lbl_amount"
        android:text="$ 7.50"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lbl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_amount"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:minWidth="80dp"
        android:text="Date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_amount"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/lbl_amount"
        android:text="3/7/2014"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lbl_from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_date"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:minWidth="80dp"
        android:text="From"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_date"
        android:layout_toRightOf="@id/lbl_from_to"
        android:text="George P. Burdell"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_from_to"
        android:layout_marginLeft="10dp"
        android:maxLines="3"
        android:text="Split pizza\nwith JK\nIt was the best pizza ever!\nGet Ultimate option"
        android:textSize="12sp" />

</RelativeLayout>